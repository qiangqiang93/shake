e":"index.vue","sourceRoot":"src/module/marketing/detail","sourcesContent":["<template>\n  <Wrapper :paddingTop=\"paddingTop\" class=\"marketing-detail\">\n    <AndroidHeader ref=\"header\" :title=\"infos.title || '营销网页'\" iconColor=\"#fff\" fontColor=\"#fff\" background=\"#000\"></AndroidHeader>\n    <div class=\"container\">\n      <div class=\"row\" v-for=\"(item, index) in infos.content\" :key=\"index\">\n        <template v-if=\"item.type === 'img'\">\n          <img class=\"img\" :src=\"item.src\" alt=\"\">\n        </template>\n        <template v-else>\n          <pre class=\"text\" v-html=\"item.text\"></pre>\n        </template>\n      </div>\n    </div>\n    <div class=\"contact\" v-if=\"infos.contact.name && infos.contact.phone\">\n      <p class=\"title\">联系方式</p>\n      <p class=\"contact-info\">\n        <span class=\"name\" v-text=\"infos.contact.name\"></span>\n        <a class=\"tel\" :href=\"'tel:' + infos.contact.phone\">\n          <span v-text=\"infos.contact.phone\"></span>\n          <i class=\"iconfont icon-bodadianhua\"></i>\n        </a>\n      </p>\n    </div>\n    <p style=\"text-align:center\">\n      <a v-if=\"infos.superLink.href && infos.superLink.btnText\" class=\"superLink\" :href=\"infos.superLink.href\" v-text=\"infos.superLink.btnText\"></a>\n    </p>\n    <div ref=\"footer\" class=\"inscription\">汇脉宝科技提供技术支持</div>\n  </Wrapper>\n</template>\n\n<script>\nimport { mapState } from 'vuex'\nimport marketing from '../../../api/marketing'\nimport Wrapper from '../../../components/Wrapper'\nimport { getMarketingCover } from '../../../utils'\nimport sdkService from '../../../service/sdkService.js'\nimport dialogService from '../../../service/dialogService'\nimport AndroidHeader from '../../../components/AndroidHeader'\nexport default {\n  name: 'marketingDetail',\n  data() {\n    return {\n      infos: {\n        content: [],\n        contact: {},\n        superLink: {}\n      },\n      marketingId: null\n    }\n  },\n  mounted() {\n    this.marketingId = this.$route.params.id\n    this.getMarketingDetail(this.marketingId)\n  },\n  methods: {\n    // 获取营销网页详情\n    async getMarketingDetail(id) {\n      try {\n        let res = await marketing.getMarketingDetail(id)\n        if (res.status !== 0) throw new Error(res.message)\n        this.infos = JSON.parse(res.data.contents)\n        document.title = this.infos.title\n        this.shareConfig()\n      } catch (err) {\n        dialogService.alert(err.message)\n      }\n    },\n    // shareConfig\n    shareConfig() {\n      if (this.platform === 'wechat') {\n        sdkService.share({\n          title: this.infos.title,\n          desc: '汇脉宝——共享流量，专注营销',\n          imgUrl: getMarketingCover(this.infos.content),\n          link: `${window.host}/?#/marketing/detail/${this.marketingId}`,\n          success: function() {\n            // 如果是分享任务，则需要回调\n            let isTask = getParamsFromUrl('task')\n            if (isTask) {\n              circle.shareMatchedInfo({\n                material_style: 1,\n                user_id: this.user.user_id,\n                material_id: this.article.uuid\n              })\n            }\n          }\n        })\n      }\n    }\n  },\n  computed: {\n    ...mapState({\n      platform: state => state.system.platform\n    }),\n    paddingTop: function() {\n      return this.platform === 'wechat' ? '0px' : '100px'\n    }\n  },\n  components: {\n    Wrapper,\n    AndroidHeader\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.marketing-detail {\n  padding-bottom: 80px;\n}\n.container {\n  width: 100%;\n  overflow: hidden;\n}\n.row {\n  width: 100%;\n  margin-top: 20px;\n  .loading {\n    width: 74px;\n    height: 74px;\n  }\n  .img-box {\n    width: 100%;\n    height: 300px;\n    display: flex;\n    align-items: center;\n    justify-content: center;\n  }\n  .img {\n    width: 100%;\n    user-select: none;\n  }\n  .text {\n    margin: 0;\n    padding: 24px;\n    font-size: 30px;\n    color: #444444;\n    line-height: 48px;\n    white-space: normal;\n    word-wrap: break-word;\n    word-break: break-all;\n    box-sizing: border-box;\n  }\n}\n.superLink {\n  font-size: 36px;\n  padding: 0 20px;\n  color: #3b3b3b;\n  min-width: 240px;\n  overflow: hidden;\n  margin: 30px auto;\n  line-height: 80px;\n  text-align: center;\n  white-space: nowrap;\n  display: inline-block;\n  box-sizing: border-box;\n  background-size: 100% 100%;\n  background-position: center;\n  background-repeat: no-repeat;\n  background-image: url(./btnBg.png);\n  animation: scale 0.6s ease infinite;\n}\n.contact {\n  height: 210px;\n  padding: 0 24px;\n  overflow: hidden;\n  background: #f4f4f4;\n  .title {\n    font-size: 30px;\n    color: #a3a3a3;\n    line-height: 80px;\n  }\n  .contact-info {\n    width: 100%;\n    height: 98px;\n    display: block;\n    line-height: 98px;\n    background: #fff;\n    box-sizing: border-box;\n  }\n  .name {\n    float: left;\n    font-size: 36px;\n    color: #666666;\n    margin-left: 30px;\n  }\n  .tel {\n    float: right;\n    font-size: 32px;\n    color: #474747;\n    margin-right: 30px;\n    .iconfont {\n      color: #4389e1;\n      font-size: 40px;\n    }\n  }\n}\n@keyframes scale {\n  0% {\n    transform: scale(1);\n  }\n  50% {\n    transform: scale(1.2);\n  }\n  100% {\n    transform: scale(1);\n  }\n}\n.inscription {\n  bottom: 0;\n  width: 100%;\n  position: fixed;\n  font-size: 24px;\n  color: #919191;\n  line-height: 72px;\n  text-align: center;\n  background: #f4f4f4;\n}\n</style>\n"]}]}