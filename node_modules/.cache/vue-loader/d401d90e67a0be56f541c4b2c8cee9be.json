verifyCode\" @click=\"changePwd\">\n        确定\n      </button>\n    </template>\n    <!-- 更换手机号 -->\n    <template v-if=\"type===2\">\n      <List>\n        <ListItem label=\"验证码\">\n          <div class=\"margin-left\">\n            <input type=\"number\" maxlength=\"6\" v-model=\"verifyCode\" placeholder=\"输入验证码\">\n            <p @click=\"getCode\">{{tips}}</p>\n          </div>\n        </ListItem>\n      </List>\n      <p class=\"tip\">若不能获取验证码，请联系客服023-68452158</p>\n\n      <button class=\"btn\" :disabled=\"!verifyCode\" @click=\"next\">\n        下一步\n      </button>\n    </template>\n    <!--绑定新手机号 -->\n    <template v-if=\"type===3\">\n      <List>\n        <ListItem label=\"手机号\">\n          <input type=\"number\" class=\"margin-left\" v-model=\"value\" placeholder=\"手机号\">\n        </ListItem>\n        <ListItem label=\"验证码\">\n          <div class=\"margin-left\">\n            <input type=\"number\" maxlength=\"6\" v-model=\"verifyCode\" placeholder=\"输入验证码\">\n            <p @click=\"getCode\">{{tips}}</p>\n          </div>\n        </ListItem>\n      </List>\n      <p class=\"tip\">若不能获取验证码，请联系客服023-68452158</p>\n      <button class=\"btn\" :disabled=\"!verifyCode||!value\" @click=\"changePhone\">\n        确定\n      </button>\n    </template>\n  </div>\n</template>\n<script>\nimport List from '../../../components/List'\nimport ListItem from '../../../components/ListItem'\nimport { mapState } from 'vuex'\nimport validate from '../../../utils/validate'\nimport system from '../../../api/system'\nimport setting from '../../../api/setting'\nimport dialogService from '../../../service/dialogService'\nexport default {\n  data() {\n    return {\n      type: null, // 1修改密码 2更换手机号 3绑定新手机\n      tips: '获取验证码', // 验证码提示\n      timer: null, // 验证码计时器\n      verifyCode: '', //验证码\n      password: '', // 密码\n      value: '', // 手机号\n      active: true // 是否可重新获取验证码\n    }\n  },\n  components: {\n    List,\n    ListItem\n  },\n  computed: {\n    ...mapState({\n      user: state => state.user.userInfo\n    })\n  },\n  mounted() {\n    this.init()\n  },\n  methods: {\n    init() {\n      this.active = true\n      this.verifyCode = ''\n      this.tips = '获取验证码'\n      this.type = Number(this.$route.params.id)\n      clearInterval(this.timer)\n      if (this.type === 1) {\n        document.title = '修改密码'\n      } else if (this.type === 2) {\n        document.title = '更换手机号'\n      } else {\n        document.title = '绑定新手机号'\n      }\n    },\n    // 获取验证码 type发送验证码 1登录 2注册 3改密 4换绑 5设置支付密码\n    async getCode() {\n      if (!this.active) return\n      let phone = this.type === 3 ? this.value : this.user.phone\n      let type = this.type === 1 ? '3' : '4'\n      let check = validate.phone(phone)\n      if (!check.status) {\n        dialogService.toast(check.msg)\n        return false\n      }\n      try {\n        let res = await system.sendValidateCode(phone, type)\n        if (res.status !== 0) throw new Error(res.message)\n        dialogService.toast('发送成功')\n        this.countdown()\n      } catch (err) {\n        dialogService.toast(err.message)\n      }\n    },\n    // 倒计时\n    countdown() {\n      let second = 60\n      this.active = false\n      this.tips = second + 's'\n      this.timer = setInterval(() => {\n        second--\n        this.tips = second + 's'\n        if (second === 0) {\n          clearInterval(this.timer)\n          this.active = true\n          this.tips = '获取验证码'\n        }\n      }, 1000)\n    },\n    // 修改密码\n    async changePwd() {\n      let params = {}\n      if (this.password.length < 6 || this.password.length > 16) {\n        dialogService.toast('密码长度为6-16位')\n        return false\n      } else {\n        params.code = this.verifyCode\n        params.phone = this.user.phone\n        params.new_password = this.password\n        try {\n          let res = await setting.changePwd(params)\n          if (res.status !== 0) throw new Error(res.message)\n          dialogService.toast('修改成功')\n          setTimeout(() => {\n            this.$router.go(-1)\n          }, 1500)\n        } catch (err) {\n          dialogService.toast(err.message)\n        }\n      }\n    },\n    // 下一步\n    async next() {\n      try {\n        let res = await system.validateCode(this.user.phone, this.verifyCode)\n        if (res.status !== 0) throw new Error(res.message)\n        this.$router.replace({\n          path: `/setting/accountManage/3/${res.data.sign}`\n        })\n      } catch (err) {\n        dialogService.toast(err.message)\n      }\n    },\n    // 更改手机号\n    async changePhone() {\n      let check = validate.phone(this.value)\n      if (!check.status) {\n        dialogService.toast(check.msg)\n        return false\n      }\n      try {\n        let res\n        let postObj = {\n          phone: this.value,\n          code: this.verifyCode,\n          sign: this.$route.params.sign\n        }\n        res = await system.bindNewPhone(postObj)\n        if (res.status !== 0) throw new Error(res.message)\n        this.$router.push('/setting/accountManage')\n      } catch (err) {\n        dialogService.toast(err.message)\n      }\n    }\n  },\n  watch: {\n    $route(to, from) {\n      this.init()\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.manage {\n  height: 100vh;\n  background: #f6f6f6;\n  overflow: hidden;\n  .manage-info {\n    width: 100%;\n    display: flex;\n    flex-wrap: wrap;\n    justify-content: center;\n    img {\n      width: 160px;\n      margin-top: 40px;\n      height: 272px;\n    }\n    .phone {\n      width: 100%;\n      text-align: center;\n      font-size: 30px;\n      color: #000000;\n      margin-top: 40px;\n    }\n  }\n  .margin-left {\n    width: 80%;\n    outline: none;\n    display: flex;\n    justify-content: space-between;\n    p {\n      font-size: 24px;\n      color: #274ff3;\n      line-height: 36px;\n    }\n    input {\n      outline: none;\n    }\n  }\n  .btn {\n    width: 690px;\n    height: 88px;\n    background-color: #274ff3;\n    border-radius: 10px;\n    font-size: 34px;\n    color: #fff;\n    margin: 40px 30px 0;\n    &:disabled {\n      background: #d8d8d8;\n    }\n  }\n  .tip {\n    font-size: 24px;\n    line-height: 30px;\n    color: #999999;\n    padding-left: 30px;\n    margin-top: 20px;\n  }\n}\n</style>\n"]}]}