t\">\n      <div class=\"app-activity-imgbox\" @click.stop=\"goPath()\">\n        <!-- 关注公众号 -->\n        <template v-if=\"type === 'focus'\">\n          <img v-if=\"official\" src=\"./official.jpg\" alt=\"\" class=\"app-activity-img\">\n          <img v-else src=\"./test.jpg\" alt=\"\" class=\"app-activity-img\">\n        </template>\n        <!-- 系统推送消息 -->\n        <template v-else-if=\"type === 'push'\">\n          <img v-if=\"activity\" :src=\"activity.content\" alt=\"\" class=\"app-activity-img\">\n        </template>\n        <!-- 拉新 -->\n        <template v-else>\n          <img src=\"./red-envelope.png\" alt=\"\" class=\"app-activity-img\">\n        </template>\n      </div>\n      <i class=\"iconfont icon-cuo1 app-activity-icon\" @click=\"close()\"></i>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { mapState, mapActions } from 'vuex'\n\nimport user from '../../api/user'\nimport message from '../../api/message'\n\nexport default {\n  props: ['type'],\n  data() {\n    return {\n      hide: true, // 隐藏注册送一元\n      activity: null, // 活动信息\n      official: false // 是否为正式服\n    }\n  },\n  mounted() {\n    if (this.type === 'push') this.getPushMsg()\n    this.official = window.host === 'http://weixin.51huimaibao.cn'\n  },\n  methods: {\n    ...mapActions(['activity/updateLatest', 'user/updateUser']),\n    // 获取推送消息\n    async getPushMsg() {\n      try {\n        let res = await message.getPush(1, 1)\n        if (res.status !== 0) throw new Error(res.message)\n        this.activity = res.data.list.data[0]\n      } finally {\n        // nothing\n      }\n    },\n    // 跳转到活动路径\n    async goPath() {\n      if (this.type === 'push') {\n        this['activity/updateLatest'](this.activity.id)\n        window.location.href = this.activity.link\n      } else if (this.type === 'pull') {\n        this.hide = false\n        await user.registReward()\n        this['user/updateUser']({ is_activity: true })\n        this.$router.push('/mine/reward')\n      }\n    },\n    // 关闭活动\n    close() {\n      if (this.type === 'push') {\n        this['activity/updateLatest'](this.activity.id)\n      } else {\n        this.hide = false\n        this['user/updateUser']({ is_activity: true })\n      }\n    }\n  },\n  computed: {\n    ...mapState({\n      user: state => state.user.userInfo,\n      latest: state => state.activity.latest\n    }),\n    show: function() {\n      let isIndex = this.$route.path === '/' || this.$route.path === '/index'\n      if (this.type === 'push') {\n        if (this.activity) {\n          return this.activity.id !== this.latest && this.user\n        } else {\n          return false\n        }\n      } else if (this.type === 'pull') {\n        if (this.user) {\n          return (\n            !this.user.is_activity &&\n            this.user.subscribe &&\n            this.hide &&\n            isIndex\n          )\n        } else {\n          return false\n        }\n      } else {\n        if (this.user) {\n          return !this.user.subscribe && this.hide && isIndex\n        } else {\n          return false\n        }\n      }\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.app-activity {\n  top: 0;\n  left: 0;\n  z-index: 4;\n  width: 100%;\n  height: 100%;\n  display: flex;\n  position: fixed;\n  overflow: hidden;\n  align-items: center;\n  justify-content: center;\n  background: rgba(0, 0, 0, 0.3);\n}\n.app-activity-content {\n  display: flex;\n  align-items: center;\n  flex-direction: column;\n  justify-content: center;\n}\n.app-activity-imgbox {\n  width: 500px;\n  display: flex;\n  overflow: hidden;\n  border-radius: 6px;\n  align-items: center;\n  justify-content: center;\n}\n.app-activity-img {\n  width: 100%;\n}\n.app-activity-icon {\n  font-size: 50px;\n  color: #f0f0f0;\n  margin-top: 30px;\n}\n</style>\n"]}]}