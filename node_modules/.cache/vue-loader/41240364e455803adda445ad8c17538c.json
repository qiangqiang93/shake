r    <string>   placeholder    \n        maxlength      <number>   最大输入长度   \n -->\n<template>\n  <div class=\"app-textarea\">\n    <div class=\"custom-textarea\" ref=\"input\" v-html=\"innerText\" :contenteditable=\"canEdit\" @input=\"changeText($event)\" @focus=\"isLocked = true\" @blur=\"isLocked = false\">\n    </div>\n    <p class=\"placeholder\" @click=\"toEdit\" v-show=\"!maxValue.length\">{{placeholder}}</p>\n  </div>\n</template>\n<script>\nimport dialogService from '../../service/dialogService'\nexport default {\n  props: ['value', 'canEdit', 'maxlength', 'placeholder'],\n  data() {\n    return {\n      innerText: this.value,\n      isLocked: false,\n      maxValue: ''\n    }\n  },\n\n  methods: {\n    toEdit() {\n      this.$refs.input.focus()\n    },\n    changeText() {\n      if (this.$refs.input.innerText.length > this.maxlength) {\n        this.$refs.input.innerHTML = this.maxValue\n        dialogService.toast('超出字数')\n        this.$refs.input.blur()\n        return\n      }\n\n      this.$emit('input', this.$refs.input.innerHTML)\n      this.maxValue = this.$refs.input.innerHTML\n    }\n  },\n  watch: {\n    value() {\n      if (!this.isLocked || !this.innerText) {\n        this.maxValue = this.innerText = this.value\n      }\n    }\n  }\n}\n</script>\n<style lang=\"scss\" scoped>\n.app-textarea {\n  position: relative;\n  width: 100%;\n  box-sizing: border-box;\n  height: 100%;\n  outline: none;\n  :focus {\n    outline: none;\n  }\n}\n.placeholder {\n  position: absolute;\n  top: 0;\n  left: 0;\n  color: #acacac;\n}\n.custom-textarea {\n  padding: 2px 0;\n  margin: 0;\n  width: 100%;\n  height: 100%;\n  box-sizing: border-box;\n}\n</style>\n\n\n"]}]}