;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAqGA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"index.vue","sourceRoot":"src/components/AppActivity","sourcesContent":["<!--\n    @name       AppActivity\n    @desc       活动弹出层\n    @props \n        isPush  <Boolean>   是否为原创推送的活动\n-->\n\n<template>\n  <div class=\"app-activity\" v-if=\"show\">\n    <div class=\"app-activity-content\">\n      <div class=\"app-activity-imgbox\" @click.stop=\"goPath()\">\n        <template v-if=\"isPush\">\n          <img v-if=\"activity\" :src=\"activity.content\" alt=\"\" class=\"app-activity-img\">\n        </template>\n        <template v-else>\n          <img src=\"./red-envelope.png\" alt=\"\">\n        </template>\n      </div>\n      <i class=\"iconfont icon-cuo1 app-activity-icon\" @click=\"close()\"></i>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { mapState, mapActions } from 'vuex'\n\nimport user from '../../api/user'\nimport message from '../../api/message'\n\nexport default {\n  props: ['isPush'],\n  data() {\n    return {\n      hide: true, // 隐藏注册送一元\n      activity: null // 活动信息\n    }\n  },\n  mounted() {\n    if (this.isPush) this.getPushMsg()\n  },\n  methods: {\n    ...mapActions(['activity/updateLatest', 'user/updateUser']),\n    // 获取推送消息\n    async getPushMsg() {\n      try {\n        let res = await message.getPush(1, 1)\n        if (res.status !== 0) throw new Error(res.message)\n        this.activity = res.data.list.data[0]\n      } finally {\n        // nothing\n      }\n    },\n    // 跳转到活动路径\n    goPath() {\n      if (this.isPush) {\n        this['activity/updateLatest'](this.activity.id)\n        window.location.href = this.activity.link\n      } else {\n        this.hide = false\n        user.registReward()\n        this['user/updateUser']({ is_activity: true })\n        this.$router.push('/reward')\n      }\n    },\n    // 关闭活动\n    close() {\n      if (this.isPush) {\n        this['activity/updateLatest'](this.activity.id)\n      } else {\n        this.hide = false\n        this['user/updateUser']({ is_activity: true })\n      }\n    }\n  },\n  computed: {\n    ...mapState({\n      user: state => state.user.userInfo,\n      latest: state => state.activity.latest\n    }),\n    show: function() {\n      if (this.isPush) {\n        if (this.activity) {\n          return this.activity.id !== this.latest && this.user\n        } else {\n          return false\n        }\n      } else {\n        if (this.user) {\n          let isIndex =\n            this.$router.path === '/' || this.$router.path === '/index'\n          return !this.user.is_activity && this.hide && isIndex\n        } else {\n          return false\n        }\n      }\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.app-activity {\n  top: 0;\n  left: 0;\n  z-index: 4;\n  width: 100%;\n  height: 100%;\n  display: flex;\n  position: fixed;\n  overflow: hidden;\n  align-items: center;\n  justify-content: center;\n  background: rgba(0, 0, 0, 0.3);\n}\n.app-activity-content {\n  display: flex;\n  align-items: center;\n  flex-direction: column;\n  justify-content: center;\n}\n.app-activity-imgbox {\n  width: 500px;\n  display: flex;\n  overflow: hidden;\n  border-radius: 6px;\n  align-items: center;\n  justify-content: center;\n}\n.app-activity-img {\n  width: 100%;\n}\n.app-activity-icon {\n  font-size: 50px;\n  color: #f0f0f0;\n  margin-top: 30px;\n}\n</style>\n"]}]}