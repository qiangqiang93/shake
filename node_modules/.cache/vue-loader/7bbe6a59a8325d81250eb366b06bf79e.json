ba(249, 249, 249, 1);\n\n  .app-header {\n    position: relative;\n  }\n\n  .edit {\n    top: 0;\n    right: 20px;\n    color: #fff;\n    font-size: 28px;\n    position: absolute;\n  }\n\n  .search {\n    display: flex;\n    padding: 26px 0;\n    position: relative;\n    background: #fff;\n    justify-content: center;\n\n    .icon-sousuo {\n      top: 50%;\n      left: 50px;\n      font-size: 24px;\n      position: absolute;\n      transform: translateY(-50%);\n    }\n  }\n\n  input {\n    width: 700px;\n    height: 64px;\n    outline: none;\n    font-size: 24px;\n    padding-left: 70px;\n    border-radius: 12px;\n    box-sizing: border-box;\n    background: rgba(249, 249, 249, 1);\n  }\n}\n\n.list-item {\n  display: flex;\n  overflow: hidden;\n  align-items: center;\n  user-select: none;\n\n  .checkbox {\n    display: flex;\n    flex: 0 0 85px;\n    align-items: center;\n    justify-content: center;\n\n    span {\n      display: flex;\n      align-items: center;\n      overflow: hidden;\n      width: 40px;\n      height: 40px;\n      border-radius: 20px;\n      box-sizing: border-box;\n      border: 1px solid #b0b0b0;\n\n      &.active {\n        background: #274ff3;\n\n        .icon-dagou1 {\n          font-size: 36px;\n          color: #fff;\n        }\n      }\n    }\n  }\n\n  .checkbox-content {\n    flex: 1;\n  }\n}\n.collection-footer {\n  bottom: 0;\n  position: fixed;\n}\n",{"version":3,"sources":["index.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAiMA;AACA;AACA;;AAEA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"index.vue","sourceRoot":"src/module/article/collection","sourcesContent":["<template>\n  <Wrapper @scrolling=\"scrollHandler\" :paddingTop=\"paddingTop\" :class=\"isEdit?'collection':''\">\n    <div ref=\"header\" class=\"header\">\n      <AppHeader :title=\"isEdit?'编辑文章':'收藏文章'\"   >\n        <span class=\"edit\" @click=\"isEdit = !isEdit\">{{isEdit?'取消':'编辑'}}</span>\n      </AppHeader>\n      <div class=\"search\" v-if=\"!isEdit\">\n        <i class=\"iconfont icon-sousuo\"></i>\n        <input type=\"text\" @keydown=\"down\" @input=\"up\" v-model=\"searchParams.name\" placeholder=\"请输入文章标题关键字\"></div>\n    </div>\n    <AppLoading v-if=\"!show\" visible=\"true\"></AppLoading>\n    <div class=\"no-data\" v-if=\"!list.length&&show\">\n      <img src=\"./none.jpg\" alt=\"\">\n      <router-link class=\"goCollection\" to=\"/article/index\" tag=\"div\">去收藏</router-link>\n    </div>\n    <ul v-if=\"list.length&&show\">\n      <li v-for=\"(item,index) in list\" :key=\"index\" class=\"list-item\" @click=\"select(index)\" @touchstart=\"loopTouchStart\" @touchend=\"loopTouchEnd\">\n        <div class=\"checkbox\" v-if=\"isEdit\">\n          <span :class=\"item.isActive?'active':''\">\n            <i class=\"iconfont icon-dagou1\" v-if=\"item.isActive\"></i>\n          </span>\n        </div>\n        <div class=\"checkbox-content\">\n          <ArticleItem :item=\"item\" :isEdit=\"isEdit\"></ArticleItem>\n        </div>\n      </li>\n    </ul>\n    <AppBottomOperation v-show=\"isEdit\" ref=\"footer\" class=\"collection-footer\" @selectAll=\"selectAll\" @del=\"del\"></AppBottomOperation>\n  </Wrapper>\n</template>\n<script>\nimport { mapState, mapActions } from 'vuex'\nimport Wrapper from '../../../components/Wrapper'\nimport Article from '../../../api/article/index'\nimport ArticleItem from '../../../components/ArticleItem'\nimport dialogService from '../../../service/dialogService'\nimport AppHeader from '../../../components/AppHeader'\nimport AppLoading from '../../../components/AppLoading'\nimport AppBottomOperation from '../../../components/AppBottomOperation'\nexport default {\n  name: 'articleCollection',\n  data() {\n    return {\n      searchParams: {\n        offset: 0, // 起始值\n        limit: 10, // 步长\n        name: ''\n      },\n      count: 0, // 总的数量\n      list: [], //文章列表\n      delList: [], // 想删除文章id\n      isEdit: false, // 是否正在编辑\n      isRequest: false, // 是否正在请求\n      isSelectAll: false, // 是否全选 false 没选 true 全选\n      windowHeight: null, // 屏幕可见高度image\n      timer: null,\n      show: false, // 是否显示空白页\n      loopTime: null // 长按时间定时器\n    }\n  },\n  mounted() {\n    this.getList('refresh')\n    this.windowHeight = document.documentElement.clientHeight\n  },\n  beforeRouteLeave(to, from, next) {\n    if (this.isEdit) {\n      this.isEdit = !this.isEdit\n    } else {\n      if (!/^\\/article\\/detail/.test(to.path)) {\n        this['system/updateRouter']({\n          type: 'del',\n          data: 'articleCollection'\n        })\n      }\n      next(true)\n    }\n  },\n  methods: {\n    ...mapActions(['system/updateRouter']),\n    // 获取收藏文章列表\n    async getList(type) {\n      try {\n        this.isRequest = true\n        let res = await Article.collectionArticle(this.searchParams)\n        if (res.status !== 0) throw new Error(res.message)\n        this.isRequest = false\n        this.count = res.data.count\n        this.searchParams.offset += 10\n        if (type) {\n          this.list = res.data.data\n          this.show = true\n        } else {\n          this.list = this.list.concat(res.data.data)\n        }\n      } catch (error) {\n        dialogService.alert(error.message)\n      }\n    },\n    // 滚动处理函数\n    scrollHandler(scrolled, scrollHeight) {\n      if (this.isRequest) return false\n      let scrollBottom = this.windowHeight + scrolled > scrollHeight - 20\n      let shouldLoad = scrollBottom && this.searchParams.offset < this.count\n      if (shouldLoad) this.getList()\n    },\n    // 选择一篇文章[这里需要判断是否是在编辑状态下]\n    select(index) {\n      if (!this.isEdit) {\n        this.$router.push(`/article/detail/${this.list[index].id}`)\n      } else {\n        this.$set(this.list[index], 'isActive', !this.list[index].isActive)\n      }\n    },\n    // 全选\n    selectAll() {\n      this.isSelectAll = !this.isSelectAll\n      this.list = this.list.map(item => {\n        item.isActive = this.isSelectAll\n        return item\n      })\n    },\n    // 输入开始\n    down() {\n      clearTimeout(this.timer)\n    },\n    // input 输入停止\n    up() {\n      this.timer = setTimeout(() => {\n        this.searchParams.offset = 0\n        if (!this.isRequest) {\n          this.getList('refresh')\n        }\n      }, 300)\n    },\n    // 删除选中\n    async del() {\n      try {\n        let deletes = this.list\n          .filter(item => item.isActive)\n          .map(item => item.id)\n        if (!deletes.length) {\n          dialogService.alert('请选择需删除的文章')\n          return false\n        }\n        let res = await Article.delArticle(deletes)\n        if (res.status !== 0) throw new Error(res.message)\n        this.list = this.list.filter(item => !item.isActive)\n        dialogService.toast('删除成功')\n        if (\n          this.list.length < this.searchParams.limit &&\n          this.list.length < this.count - deletes.length\n        ) {\n          this.searchParams.offset = this.list.length\n          this.getList()\n        }\n      } catch (error) {\n        dialogService.alert(error.message)\n      }\n    },\n    // 长按开始\n    loopTouchStart() {\n      clearInterval(this.loopTime) //再次清空定时器，防止重复注册定时器\n      this.loopTime = setTimeout(() => {\n        this.isEdit = true\n      }, 1000)\n    },\n    // 长按结束\n    loopTouchEnd() {\n      clearInterval(this.loopTime)\n    }\n  },\n  computed: {\n    ...mapState({\n      platform: state => state.system.platform\n    }),\n    paddingTop: function() {\n      if (this.isEdit) {\n        return '0px'\n      } else {\n        return this.platform !== 'wechat' && !this.isEdit ? '198px' : '116px'\n      }\n    }\n  },\n  components: {\n    Wrapper,\n    ArticleItem,\n    AppHeader,\n    AppLoading,\n    AppBottomOperation\n  }\n}\n</script>\n<style lang=\"scss\" scoped>\n.collection {\n  padding-bottom: 110px;\n}\n\n.no-data {\n  overflow: hidden;\n\n  img {\n    width: 390px;\n    position: relative;\n    margin: 60px auto 30px;\n    display: block;\n  }\n\n  .goCollection {\n    position: relative;\n    margin: auto;\n    color: #fff;\n    width: 190px;\n    height: 70px;\n    line-height: 70px;\n    font-size: 30px;\n    background: #274ff3;\n    border-radius: 35px;\n    text-align: center;\n  }\n}\n\n.header {\n  top: 0;\n  width: 100%;\n  position: fixed;\n  overflow: hidden;\n  border-bottom: 2px solid rgba(249, 249, 249, 1);\n\n  .app-header {\n    position: relative;\n  }\n\n  .edit {\n    top: 0;\n    right: 20px;\n    color: #fff;\n    font-size: 28px;\n    position: absolute;\n  }\n\n  .search {\n    display: flex;\n    padding: 26px 0;\n    position: relative;\n    background: #fff;\n    justify-content: center;\n\n    .icon-sousuo {\n      top: 50%;\n      left: 50px;\n      font-size: 24px;\n      position: absolute;\n      transform: translateY(-50%);\n    }\n  }\n\n  input {\n    width: 700px;\n    height: 64px;\n    outline: none;\n    font-size: 24px;\n    padding-left: 70px;\n    border-radius: 12px;\n    box-sizing: border-box;\n    background: rgba(249, 249, 249, 1);\n  }\n}\n\n.list-item {\n  display: flex;\n  overflow: hidden;\n  align-items: center;\n  user-select: none;\n\n  .checkbox {\n    display: flex;\n    flex: 0 0 85px;\n    align-items: center;\n    justify-content: center;\n\n    span {\n      display: flex;\n      align-items: center;\n      overflow: hidden;\n      width: 40px;\n      height: 40px;\n      border-radius: 20px;\n      box-sizing: border-box;\n      border: 1px solid #b0b0b0;\n\n      &.active {\n        background: #274ff3;\n\n        .icon-dagou1 {\n          font-size: 36px;\n          color: #fff;\n        }\n      }\n    }\n  }\n\n  .checkbox-content {\n    flex: 1;\n  }\n}\n.collection-footer {\n  bottom: 0;\n  position: fixed;\n}\n</style>"]}]}