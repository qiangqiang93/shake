-sizing: border-box;\n    overflow: hidden;\n    display: flex;\n    border-bottom: 20px solid #f6f6f6;\n  }\n  color: #000;\n  width: 100%;\n  box-sizing: border-box;\n  min-height: 100vh;\n  background: #fff;\n  overflow: hidden;\n  position: relative;\n}\n",{"version":3,"sources":["index.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAmLA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"index.vue","sourceRoot":"src/module/message/index","sourcesContent":["<template>\n  <Wrapper class=\"warpper\">\n    <div class=\"topbar\">\n      <router-link @click.native=\"popRed = false\" tag=\"div\" to=\"/message/popular\" class=\"item\">\n        <i class=\"iconfont icon-woderenqi\">\n          <span v-show=\"popRed\" class=\"reddot\"></span>\n        </i>\n        <p>人气</p>\n      </router-link>\n      <div @click=\"toFavour\" class=\"item\">\n        <i class=\"iconfont icon-shoucang2\"></i>\n        <p>对我感兴趣</p>\n      </div>\n      <router-link tag=\"div\" to=\"/message/system\" class=\"item\">\n        <i class=\"iconfont icon-xitongxiaoxi\"></i>\n        <p>系统通知</p>\n      </router-link>\n    </div>\n    <AppLoading style=\"margin-top: 210px;\" v-show=\"firstIn\"></AppLoading>\n    <router-link @click.native=\"pushRed = false\" v-if=\"pushmsg\" to=\"/message/detail\" tag=\"div\" class=\"message\">\n      <i class=\"iconfont icon-tongzhi\"></i>\n      <div class=\"msgbox\">\n        <p class=\"type\">推送消息\n          <span class=\"time\">{{pushmsg.created_at|timeToNow}}</span>\n        </p>\n        <p class=\"content\">{{pushmsg.title}}\n          <!-- <span v-show=\"pushRed\" class=\"reddot\"></span> -->\n        </p>\n      </div>\n    </router-link>\n    <div class=\"message\" @click=\"touser(item)\" v-for=\"(item,index) in lists\" :key=\"index\" :style=\"{transform:'translateX(-'+transforms[index]+'px)'}\" @touchstart='touchStart(index)' @touchmove='touchMove' @touchend='touchEnd'>\n      <img :src=\"item.head_portrait\" />\n      <div class=\"msgbox\">\n        <p class=\"type\">{{item.wechat_name}}\n          <span class=\"time\">{{item.created_at|timeToNow}}</span>\n        </p>\n        <p class=\"content\">{{item.title}}\n          <!-- <span class=\"reddot\"></span> -->\n        </p>\n      </div>\n      <p class=\"del\" @click.stop=\"deluser(item.id)\">删除</p>\n    </div>\n    <router-link to=\"/message/xiaomaibao\" v-if=\"maibao\" tag=\"div\" class=\"message\">\n      <img src=\"./xiaomaibao.png\" />\n      <div class=\"msgbox\">\n        <p class=\"type\">小脉宝\n          <span class=\"time\">{{maibao.created_at|timeToNow}}</span>\n        </p>\n        <p class=\"content\">{{maibao.title}}\n          <!-- <span class=\"reddot\"></span> -->\n        </p>\n      </div>\n    </router-link>\n  </Wrapper>\n</template>\n<script>\nimport messageApi from '../../../api/message/index'\nimport AppLoading from '../../../components/AppLoading/index'\nimport Wrapper from '../../../components/Wrapper/index'\nimport dialogService from '../../../service/dialogService'\nimport { mapState, mapActions } from 'vuex'\nexport default {\n  name: 'message-index',\n  data() {\n    return {\n      popRed: false, //小红点\n      pushRed: true, //小红点\n      firstIn: true, // 第一次进入\n      maibao: null, // 小脉宝消息\n      pushmsg: null, // 推送消息\n      tindex: null, // 滑动索引\n      startX: 0, //触摸位置\n      endX: 0, //结束位置\n      moveX: 0, //滑动时的位置\n      disX: 0, //移动距离\n      lists: [], // 用户消息列表\n      transforms: [] //滑动删除管理\n    }\n  },\n  computed: {\n    ...mapState({\n      userInfo: state => state.user.userInfo\n    })\n  },\n  components: { AppLoading, Wrapper },\n  async mounted() {\n    let xiaomaibao = await messageApi.getXiaomaibao()\n    if (xiaomaibao.data.list.data) {\n      this.maibao = xiaomaibao.data.list.data[0]\n    }\n    this.popRed = xiaomaibao.data.pop_flag\n    let user = await messageApi.getUserlist()\n    this.lists = user.data.list.data\n    let msg = await messageApi.getPush(1)\n    if (msg.data.list) {\n      this.pushmsg = msg.data.list.data[0]\n    }\n    for (let i = 0; i < this.lists.length; i++) {\n      this.transforms.push('0')\n    }\n    this.firstIn = false\n  },\n  methods: {\n    ...mapActions(['system/updateBeVipPath']),\n    // 查看对我感兴趣列表\n    toFavour() {\n      if (this.userInfo.vip_level) {\n        this.$router.push('/message/favour')\n      } else {\n        dialogService.confirm('开通会员才能查看，是否去开通？', ok => {\n          if (ok) {\n            this['system/updateBeVipPath']('/message/favour')\n            this.$router.push('/vipCenter')\n          }\n        })\n      }\n    },\n    // 用户消息列表\n    touser(item) {\n      window.msgPortrait = item.head_portrait\n      this.$router.push(`/message/user?id=${item.from_user_id}`)\n    },\n    // 删除用户消息\n    async deluser(id) {\n      let user = await messageApi.delUsermsg(id)\n      dialogService.toast('删除成功')\n    },\n    // 左划删除\n    touchStart(index) {\n      this.tindex = index\n      //tounches类数组，等于1时表示此时有只有一只手指在触摸屏幕\n      if (event.touches.length == 1) {\n        // 记录开始位置\n        this.startX = event.touches[0].clientX\n      }\n    },\n    touchMove(ev) {\n      ev = ev || event\n      //获取删除按钮的宽度，此宽度为滑块左滑的最大距离\n      let wd = 155\n      if (ev.touches.length == 1) {\n        // 滑动时距离浏览器左侧实时距离\n        this.moveX = ev.touches[0].clientX\n\n        //起始位置减去 实时的滑动的距离，得到手指实时偏移距离\n        this.disX = this.startX - this.moveX\n        // 如果是向右滑动或者不滑动，不改变滑块的位置\n        if (this.disX < 0 || this.disX == 0) {\n          this.$set(this.transforms, this.tindex, 0)\n          // 大于0，表示左滑了，此时滑块开始滑动\n        } else if (this.disX > 0) {\n          //具体滑动距离我取的是 手指偏移距离*5。\n          this.$set(this.transforms, this.tindex, this.disX)\n          // 最大也只能等于删除按钮宽度\n          if (this.disX >= wd) {\n            this.$set(this.transforms, this.tindex, 155)\n          }\n        }\n      }\n    },\n    touchEnd(ev) {\n      ev = ev || event\n      let wd = 155\n      if (ev.changedTouches.length == 1) {\n        let endX = ev.changedTouches[0].clientX\n        this.disX = this.startX - endX\n        //如果距离小于删除按钮一半,强行回到起点\n        if (this.disX < wd / 2) {\n          this.$set(this.transforms, this.tindex, 0)\n        } else {\n          //大于一半 滑动到最大值\n          this.$set(this.transforms, this.tindex, 155)\n        }\n      }\n    }\n  }\n}\n</script>\n<style lang=\"scss\" scoped>\n.warpper {\n  .message {\n    .msgbox {\n      margin-left: 30px;\n      flex: 1;\n      .type {\n        .time {\n          float: right;\n          color: #6e6e6e;\n          font-size: 22px;\n          font-weight: normal;\n        }\n        overflow: hidden;\n        color: #000000;\n        font-size: 30px;\n        font-weight: bold;\n        margin-bottom: 13px;\n      }\n      .content {\n        .reddot {\n          float: right;\n          display: block;\n          width: 20px;\n          height: 20px;\n          border-radius: 50%;\n          border: 3px solid #fff;\n          background: #ef2323;\n        }\n        overflow: hidden;\n        position: relative;\n        color: #6e6e6e;\n        font-size: 24px;\n      }\n    }\n    .icon-tongzhi,\n    img {\n      text-align: center;\n      background: #3599f6;\n      position: relative;\n      width: 90px;\n      height: 90px;\n      display: block;\n      line-height: 90px;\n      color: #fff;\n      border-radius: 50%;\n      font-size: 40px;\n    }\n    transition: all 0.3s ease-in-out;\n    display: flex;\n    align-items: center;\n    position: relative;\n    width: 100%;\n    padding: 0 30px;\n    box-sizing: border-box;\n    height: 140px;\n    border-bottom: 1px solid #e9e9ee;\n    .del {\n      position: absolute;\n      text-align: center;\n      right: -155px;\n      top: 0;\n      width: 155px;\n      height: 140px;\n      line-height: 140px;\n      font-size: 28px;\n      color: #fff;\n      background: #f50303;\n    }\n  }\n  .topbar {\n    .item {\n      font-size: 22px;\n      color: #666666;\n      padding-top: 30px;\n      width: 100%;\n      text-align: center;\n      .icon-shoucang2 {\n        background: linear-gradient(to right, #fb4646, #fa4545);\n      }\n      .icon-woderenqi {\n        background: linear-gradient(to right, #fb9635, #fb9535);\n      }\n      .icon-xitongxiaoxi {\n        background: linear-gradient(to right, #385df9, #365cf8);\n      }\n      .iconfont {\n        .reddot {\n          position: absolute;\n          display: block;\n          width: 20px;\n          height: 20px;\n          border-radius: 50%;\n          border: 3px solid #fff;\n          background: #ef2323;\n          top: 0;\n          right: 0;\n        }\n        position: relative;\n        width: 90px;\n        height: 90px;\n        display: block;\n        margin: 0 auto 16px;\n        line-height: 90px;\n        color: #fff;\n        border-radius: 50%;\n        font-size: 40px;\n      }\n    }\n    padding: 0 30px;\n    height: 210px;\n    width: 100%;\n    box-sizing: border-box;\n    overflow: hidden;\n    display: flex;\n    border-bottom: 20px solid #f6f6f6;\n  }\n  color: #000;\n  width: 100%;\n  box-sizing: border-box;\n  min-height: 100vh;\n  background: #fff;\n  overflow: hidden;\n  position: relative;\n}\n</style>\n \n "]}]}